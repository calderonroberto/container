

<div class="row">

  <div class="span3 offset2">
    <h2>Sign in</h2>
    <%= form_for(:session, url: sessions_path) do |f| %>
      
      <%= f.label :name %>
      <%= f.text_field :name %>
    
      <%= f.label :password %>
      <%= f.password_field :password %>

      <%= f.submit "Sign in", class: "btn btn-large btn-primary" %>
    <% end %>
    <p>New display? <%= link_to "Create a display.", signup_path %></p>
  </div>
  <div class="span4">
      <%= image_tag("cherry.png", alt: "cherry", class: "signin-image") %>   
  </div>
</div>
