    <!-- Checkins -->
   
 <div class="col-xs-12">
    <hr><h4>Your Checkins this week:</h4> 
 </div>
    <div class="profile-checkins">

       <div class="col-xs-8">
          <%= render 'checkins/checkin_form', :user => @user, :display => @display, :checkin_today => @checkin_today %>
       </div>

       <div class="col-xs-4">
          <div class="checkins_count"><%= @user.score(@display, Time.zone.now.beginning_of_week, Time.zone.now)['checkins'] %></div>
       </div>
    </div>




 <!-- Favours --> 
 <div class="col-xs-12">
    <hr><h4>Your Favours this week:</h4> 
 </div>

 <div class="col-xs-8">
    <div class="profile-favourlist">
       <% if @favours.empty? %>
          <div class="tutorial-text">
            <span class="glyphicon glyphicon-info-sign"></span> You have no Favour requests yet :(
          </div>
       <% end %>  
       <% @favours.each do |f| %>
          <% fromuser = User.find(f.from_id) %>
          <div class="profile-favourlist-item">

	    <span class="glyphicon glyphicon-gift favourflash"></span>
	    <%= render 'favours/reciprocatefavour_form', :favour_id => f.id%>
	    <br></br>
	    Sent by <%= link_to fromuser.name, {:action => 'new', :controller => 'messages', id: @display.unique_id, user_id: fromuser.id} %>
	    on <%= f.created_at.in_time_zone("Pacific Time (US & Canada)").strftime("%a %b %d") %>

	  </div>
       <% end %>
    </div>
  </div>

<div class="col-xs-4">
       <div class="favours_count"><%= @user.score(@display, Time.zone.now.beginning_of_week, Time.zone.now)['favours'] %></div>
</div>










    <!-- Gifts -->
 <div class="col-xs-12">
    <hr><h4>Gifts you have received:</h4> 
 </div>
 <div class="col-xs-12">
    <div class="profile-giftlist">    
       <% if @gifts.empty? %>
          <div class="tutorial-text">
            <span class="glyphicon glyphicon-gift"></span> You have no gifts yet :(
          </div>
       <% end %>  
       <% @gifts.each do |g| %>

          <% fromuser = User.find(g.from_id) %>
          <div class="profile-giftlist-item">
 	    <!-- Draw according to type of gift -->
	    <% if g.gift_type == 0 %>
	       <span class="glyphicon glyphicon-gift giftflash"></span>
            <% elsif g.gift_type == 1 %>
	       <span class="glyphicon glyphicon-music giftflash"></span>
            <% elsif g.gift_type == 2 %>
	       <span class="glyphicon glyphicon-star giftflash"></span>
            <% elsif g.gift_type == 3 %>
	       <span class="glyphicon glyphicon-heart giftflash"></span>

	    <% end %> 
	    <br></br>
	    Sent by <%= link_to fromuser.name, {:action => 'new', :controller => 'messages', id: @display.unique_id, user_id: fromuser.id} %>
	    on <%= g.created_at.in_time_zone("Pacific Time (US & Canada)").strftime("%a %b %d") %>

<!--
link_to image_tag(fromuser.thumbnail_url, :border => 0, :width => 50, :height => 50, :id => fromuser.id), {:action => 'new', :controller => 'messages', :user_id => fromuser.id, :class => 'user_thumb', id: @display.unique_id}
-->    

	  </div>
       <% end %>
    </div>
  </div>

  </div>
</div>



